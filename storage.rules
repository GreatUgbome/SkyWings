rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper: Check if user is Admin (Sync UIDs with firestore.rules)
    function isAdmin() {
      return request.auth != null && request.auth.uid in ['YOUR_ADMIN_UID_HERE'];
    }

    // Airline Logos: Publicly readable, Only Admins can upload
    match /airline_logos/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    // Tickets: Users can only access their own tickets
    match /tickets/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}